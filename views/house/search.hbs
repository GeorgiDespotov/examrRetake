{{#with searchedHouses}}
<form class="search" action="/house/search" method="GET">
    <input type="search" name="search" placeholder="Search here..." value="{{search}}">
    <button type="submit">Search</button>
</form>
{{/with}}

    {{#if searchedHouses}}
<section id="find-section">
    <!-- If there are any matching matches from the search, show each of them -->
    {{#each searchedHouses}}
    {{> house}}
    {{/each}}
